<%- include("partials/header.ejs") %>

<div class="container">
  <header class="border-bottom lh-1 py-3 mb-3">
    <div class="row flex-nowrap justify-content-start align-items-center">
      <div class="col-md-2">
        <a href="/"><img src="/images/logomark.png" width="180px" /></a>
      </div>
      <div class="col">
        <strong class="ms-4 fs-5 p-0"> Creator's Tools </strong>
      </div>
    </div>
  </header>
</div>
<body class="tools">
  <main class="container mb-4">
    <div class="row g-5">
      <div class="col-md-4">
        <div class="d-flex flex-column">
          <div class="card mb-4">
            <div class="card-body">
              <div class="d-flex justify-content-center align-items-center">
                <a
                  href="/tools/"
                  class="icon-link gap-1 icon-link-hover fw-bold"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 512 512"
                    width="16"
                    fill="currentColor"
                  >
                    <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                    <path
                      d="M9.4 233.4c-12.5 12.5-12.5 32.8 0 45.3l128 128c12.5 12.5 32.8 12.5 45.3 0s12.5-32.8 0-45.3L109.3 288 480 288c17.7 0 32-14.3 32-32s-14.3-32-32-32l-370.7 0 73.4-73.4c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0l-128 128z"
                    />
                  </svg>
                  Back
                </a>
              </div>
            </div>
          </div>

          <% for (let i = 0; i < blogs.length; i++) { %>
          <div class="card mb-4">
            <div class="card-body">
              <h5 class="card-title"><%= blogs[i].title %></h5>
              <h6 class="card-subtitle mb-3 text-body-secondary fs-6">
                <%= blogs[i].date %> by <%= blogs[i].author %>
              </h6>
              <p class="card-text">
                <%- blogs[i].content.slice(0, 100) + "..." %>
              </p>
              <div class="d-flex justify-content-end align-items-center">
                <a
                  href="/tools/<%= blogs[i].id %>"
                  class="icon-link gap-1 icon-link-hover fw-bold me-4"
                  id="editButton"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    fill="currentColor"
                    viewBox="0 0 512 512"
                  >
                    <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                    <path
                      d="M471.6 21.7c-21.9-21.9-57.3-21.9-79.2 0L362.3 51.7l97.9 97.9 30.1-30.1c21.9-21.9 21.9-57.3 0-79.2L471.6 21.7zm-299.2 220c-6.1 6.1-10.8 13.6-13.5 21.9l-29.6 88.8c-2.9 8.6-.6 18.1 5.8 24.6s15.9 8.7 24.6 5.8l88.8-29.6c8.2-2.7 15.7-7.4 21.9-13.5L437.7 172.3 339.7 74.3 172.4 241.7zM96 64C43 64 0 107 0 160V416c0 53 43 96 96 96H352c53 0 96-43 96-96V320c0-17.7-14.3-32-32-32s-32 14.3-32 32v96c0 17.7-14.3 32-32 32H96c-17.7 0-32-14.3-32-32V160c0-17.7 14.3-32 32-32h96c17.7 0 32-14.3 32-32s-14.3-32-32-32H96z"
                    />
                  </svg>
                  Edit
                </a>
                <a
                  href="#"
                  class="icon-link gap-1 icon-link-hover fw-bold me-2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    fill="currentColor"
                    viewBox="0 0 448 512"
                  >
                    <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
                    <path
                      d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"
                    />
                  </svg>
                  Delete
                </a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>

      <div class="col-md-8">
        <div class="border p-4 rounded bg-light" id="addBlogContent">
          <h4 class="mb-4">Add a Blog</h4>
          <form action="/tools/add/submit" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input class="form-control" id="title" name="title" required />
            </div>
            <div class="mb-3">
              <label for="author" class="form-label">Author</label>
              <input class="form-control" id="author" name="author" required />
            </div>
            <div class="mb-3">
              <label for="content" class="form-label"></label>
              <textarea
                class="form-control"
                id="content"
                name="content"
                rows="50"
                placeholder="Compose your blog..."
                required
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="authorInfo" class="form-label"
                >Author Description</label
              >
              <textarea
                class="form-control"
                id="authorInfo"
                name="authorInfo"
                rows="3"
                placeholder=""
                required
              ></textarea>
            </div>
            <div class="mb-3">
              <label for="notes" class="form-label">Acknowledgments</label>
              <textarea
                class="form-control"
                id="notes"
                name="notes"
                rows="3"
                placeholder=""
              ></textarea>
            </div>
            <div class="d-flex justify-content-end align-items-center">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
</body>
